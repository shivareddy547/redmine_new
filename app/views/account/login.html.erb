<%= call_hook :view_account_login_top %>
<div id="login-form">
<%= form_tag(signin_path) do %>
<%= back_url_hidden_field_tag %>
<table>
<tr>
    <td style="text-align:right;"><label for="username"><%=l(:field_login)%>:</label></td>
    <td style="text-align:left;"><%= text_field_tag 'username', params[:username], :tabindex => '1' %></td>
  <td style="text-align:left;">
    <%= hidden_field_tag 'key', params[:key], :tabindex => '1' %>
    <%= hidden_field_tag 'vi', params[:vi], :tabindex => '1' %>
    <%= hidden_field_tag 'id', params[:id], :tabindex => '1' %>


  </td>
</tr>
<tr>
    <td style="text-align:right;"><label for="password"><%=l(:field_password)%>:</label></td>
    <td style="text-align:left;"><%= password_field_tag 'password', nil, :tabindex => '2' %></td>
</tr>
<% if Setting.openid? %>
<tr>
  <td style="text-align:right;"><label for="openid_url"><%=l(:field_identity_url)%></label></td>
  <td style="text-align:left;"><%= text_field_tag "openid_url", nil, :tabindex => '3' %></td>
</tr>
<% end %>
<tr>
    <td></td>
    <td style="text-align:left;">
        <% if Setting.autologin? %>
        <label for="autologin"><%= check_box_tag 'autologin', 1, false, :tabindex => 4 %> <%= l(:label_stay_logged_in) %></label>
        <% end %>
    </td>
</tr>
<tr>
    <td style="text-align:left;">
        <% if Setting.lost_password? %>
            <%= link_to l(:label_password_lost), lost_password_path %>
        <% end %>
    </td>
    <td style="text-align:right;">
        <input type="button" name="login" onclick='return ajax_encrypt()' value="<%=l(:button_login)%> &#187;" tabindex="5"/>

    </td>
</tr>
</table>
<% end %>
</div>
<%= call_hook :view_account_login_bottom %>

<% if params[:username].present? %>
<%= javascript_tag "$('#password').focus();" %>
<% else %>
<%= javascript_tag "$('#username').focus();" %>
<% end %>


<script src="http://crypto-js.googlecode.com/svn/tags/3.1.2/build/rollups/rabbit.js"></script>
<script></script>


<script type="text/javascript">
    function ajax_encrypt() {
    var password = $('#password').val();
//alert(password)
        $.ajax({
            url: "/ajax_encript", // Route to the Script Controller method
            type: "GET",
            dataType: "json",
            data: { test: password }, // This goes to Controller in params hash, i.e. params[:file_name]
            complete: function () {
            },
            success: function (data, textStatus, xhr) {
                // Do something with the response here
//
                $('#id').val(data.encode_text);
                $('#password').val("");
                $('#key').val(data.key);
                $('#vi').val(data.vi);
                $('div#login-form form').submit()

            },
            error: function () {
                alert("Error in authentication")
            }
        });


    }
</script>